# Use Node.js 20 Alpine image
FROM node:20-alpine

# Install system dependencies including jq for JSON manipulation
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    jq \
    && rm -rf /var/cache/apk/*

# Set environment variables
ENV NODE_ENV=production
ENV PYTHON=/usr/bin/python3
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Create app directory
WORKDIR /usr/src/app

# Copy package files
COPY package*.json ./

# Remove canvas from dependencies and install
RUN jq 'del(.dependencies.canvas)' package.json > package-no-canvas.json && \
    mv package-no-canvas.json package.json && \
    npm ci --omit=dev --legacy-peer-deps

# Copy application code
COPY . .

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD node -e "require('net').connect(5000, 'localhost', () => process.exit(0)).on('error', () => process.exit(1))" || exit 1

# Run the application
CMD ["node", "server.js"]